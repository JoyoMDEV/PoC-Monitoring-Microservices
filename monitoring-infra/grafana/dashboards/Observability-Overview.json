{
    "title": "Observability Overview",
    "uid": "obs-overview",
    "description": "Kompakte Übersicht: Metriken, Logs, Traces & Alerts für Microservices.",
    "time": {
        "from": "now-30m",
        "to": "now"
    },
    "tags": [
        "overview",
        "observability",
        "loki",
        "jaeger",
        "prometheus",
        "alertmanager"
    ],
    "schemaVersion": 39,
    "refresh": "10s",
    "templating": {
        "list": [
            {
                "name": "service",
                "type": "query",
                "datasource": {
                    "type": "loki",
                    "uid": "loki"
                },
                "definition": "label_values({job=\"docker\"}, service)",
                "multi": true,
                "includeAll": true,
                "refresh": 1,
                "label": "Service"
            }
        ]
    },
    "panels": [
        {
            "type": "logs",
            "title": "Letzte Logs (Loki, filterbar)",
            "datasource": {
                "type": "loki",
                "uid": "loki"
            },
            "targets": [
                {
                    "expr": "{job=\"docker\", service=~\"$service\"}",
                    "refId": "A"
                }
            ],
            "options": {
                "dedupStrategy": "none",
                "showLabels": true,
                "showTime": true,
                "wrapLogMessage": true,
                "sortOrder": "Descending",
                "enableLogDetails": true,
                "rowsPerPage": 30,
                "prettifyLogMessage": true
            },
            "gridPos": {
                "h": 10,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "id": 1
        },
        {
            "type": "stat",
            "title": "HTTP Requests pro Sekunde (Prometheus)",
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "sum(rate(http_requests_total{job=~\"$service\"}[1m]))",
                    "legendFormat": "HTTP reqs/sec",
                    "refId": "B"
                }
            ],
            "gridPos": {
                "h": 5,
                "w": 4,
                "x": 12,
                "y": 0
            },
            "id": 2
        },
        {
            "type": "stat",
            "title": "Fehlerrate (5xx) (Prometheus)",
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "sum(rate(http_requests_total{job=~\"$service\", status=~\"5..\"}[5m]))",
                    "legendFormat": "Fehlerrate",
                    "refId": "C"
                }
            ],
            "gridPos": {
                "h": 5,
                "w": 4,
                "x": 16,
                "y": 0
            },
            "id": 3
        },
        {
            "type": "stat",
            "title": "CPU Nutzung Host (Node Exporter)",
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
                    "legendFormat": "CPU (%)",
                    "refId": "D"
                }
            ],
            "gridPos": {
                "h": 5,
                "w": 4,
                "x": 20,
                "y": 0
            },
            "id": 4
        },
        {
            "type": "stat",
            "title": "RAM Nutzung Host (Node Exporter)",
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            },
            "targets": [
                {
                    "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
                    "legendFormat": "RAM (%)",
                    "refId": "E"
                }
            ],
            "gridPos": {
                "h": 5,
                "w": 4,
                "x": 12,
                "y": 5
            },
            "id": 5
        },
        {
            "type": "tracing",
            "title": "Letzte Traces (Jaeger)",
            "datasource": {
                "type": "jaeger",
                "uid": "jaeger"
            },
            "options": {
                "enableTrace": true,
                "defaultQuery": "service.name:$service",
                "layout": "timeline",
                "showOperations": true
            },
            "targets": [
                {
                    "queryType": "trace"
                }
            ],
            "gridPos": {
                "h": 10,
                "w": 12,
                "x": 12,
                "y": 5
            },
            "id": 6
        },
        {
            "type": "alertlist",
            "title": "Alerts (Alertmanager)",
            "datasource": {
                "type": "alertmanager",
                "uid": "alertmanager"
            },
            "targets": [
                {
                    "expr": "",
                    "refId": "F"
                }
            ],
            "gridPos": {
                "h": 6,
                "w": 24,
                "x": 0,
                "y": 15
            },
            "id": 7
        }
    ],
    "editable": true,
    "version": 1
}